{
    "version": "2.0.0",
    "tasks": [
        
        { // main builder depends on the other tasks to build
            "label": "buildmodules",
            "command": "echo",
            "type": "shell",
            "args": ["building modules"],
            "dependsOn": [
                "aepl",
                "fetch"
            ]
        },


        { // installs aepl
            "label": "aepl",
            "command": "npm",
            "type": "process",
            "args": [ "i", "aepl" ],
        },


        { // installs node-fetch
            "label": "fetch",
            "command": "npm",
            "type": "process",
            "args": [ "i", "node-fetch" ],
        }

    ]
}